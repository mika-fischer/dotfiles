#!/bin/bash

DOTFILES=~/.dotfiles

for dir in $(ls $DOTFILES); do
    REL_DOTFILES=.dotfiles
    unset PREFIX
    [[ $dir == "bin" ]] && continue
    [[ $dir == "awesome" ]]    && PREFIX=~/.config && REL_DOTFILES=../.dotfiles
    [[ $dir == "gtk3" ]]       && PREFIX=~/.config && REL_DOTFILES=../.dotfiles
    [[ $dir == "qtile" ]]      && PREFIX=~/.config && REL_DOTFILES=../.dotfiles
    [[ $dir == "taffybar" ]]   && PREFIX=~/.config && REL_DOTFILES=../.dotfiles
    [[ $dir == "volumeicon" ]] && PREFIX=~/.config && REL_DOTFILES=../.dotfiles
    [[ $dir == "zathura" ]]    && PREFIX=~/.config && REL_DOTFILES=../.dotfiles
	for file in $(ls $DOTFILES/$dir); do
        if [[ -z $PREFIX ]]; then
            SOURCE=~/.$file
        else
            SOURCE=${PREFIX}/${file}
            mkdir -p ${PREFIX}
        fi
		TARGET=$REL_DOTFILES/$dir/$file
		if [[ -L $SOURCE ]]; then
			rm $SOURCE
		fi
		if [[ -e $SOURCE ]]; then
			echo "ERROR: $SOURCE already exists!"
		else
			ln -s $TARGET $SOURCE
		fi
	done
done

for file in $(ls $DOTFILES/bin); do
	SOURCE=~/bin/$file
	TARGET=../$REL_DOTFILES/bin/$file
	if [[ -L $SOURCE ]]; then
		rm $SOURCE
	fi
	if [[ -e $SOURCE ]]; then
		echo "ERROR: $SOURCE already exists!"
	else
		ln -s $TARGET $SOURCE
	fi
done
