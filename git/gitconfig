[user]
	name = Mika Fischer

[core]
	eol = lf
	autocrlf = input
	excludesfile = ~/.gitignore

[color]
	ui = auto

[alias]
	co = checkout
	st = status
	su = submodule update --init
	sur = submodule update --init --recursive
	sf = submodule foreach
	psu = !git pull && git su
	psur = !git pull && git sur
	pma = !git co master && git pull

[merge]
	conflictstyle = diff3
	tool = vimdiff
	guitool = meld

[diff]
	tool = vimdiff
	guitool = meld

[status]
	submodulesummary = true

[http]
	postBuffer = 100000000

[tig "bind"]
	generic = P !git push
	generic = U !git psu
	
[gui]
	fontui = -family \"DejaVu Sans\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"FiraCode NF\" -size 8 -weight normal -slant roman -underline 0 -overstrike 0
	spellingdictionary = en_US

[push]
	default = simple

[pull]
	rebase = true

[include]
    path = ~/.gitconfig.local
